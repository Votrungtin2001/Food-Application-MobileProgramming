<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout_KindOfRestaurant"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/frame">

        <ImageView
            android:id="@+id/imageView_KindOfRestaurant"
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_favorite_24" />

        <TextView
            android:id="@+id/KindOfRestaurant_NameBranch"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_check_circle_24"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Name Restaurant"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView_KindOfRestaurant"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/KindOfRestaurant_Address"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Address"
            android:textSize="12dp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/imageView_KindOfRestaurant"
            app:layout_constraintTop_toBottomOf="@+id/KindOfRestaurant_NameBranch" />

        <TextView
            android:id="@+id/KindOfRestaurant_OpeningTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:drawableLeft="@drawable/ic_baseline_access_time_24"
            android:text="Opening Time"
            android:textSize="18dp"
            android:textStyle="normal"
            android:textColor="#506AEF"
            app:layout_constraintStart_toEndOf="@+id/imageView_KindOfRestaurant"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>