<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout_ProductCategory"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <ImageView
            android:id="@+id/ImageView_ImageProduct_ProductWithCategory"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_favorite_24" />


        <TextView
            android:id="@+id/TextView_NameProduct_ProductWithCategory"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="Name Product"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ImageView_ImageProduct_ProductWithCategory" />

        <TextView
            android:id="@+id/TextView_ProductDescription_ProductWithCategory"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="Description"
            android:textSize="12dp"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@+id/TextView_NameProduct_ProductWithCategory"
            app:layout_constraintStart_toEndOf="@id/ImageView_ImageProduct_ProductWithCategory" />


        <TextView
            android:id="@+id/TextView_NameBranch_ProductWithCategory"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Name Restaurant"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/TextView_ProductDescription_ProductWithCategory"
            app:layout_constraintStart_toEndOf="@id/ImageView_ImageProduct_ProductWithCategory" />

        <TextView
            android:id="@+id/textView_26"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:text=""
            android:layout_marginTop="5dp"
            android:background="#F5EAF1EE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>