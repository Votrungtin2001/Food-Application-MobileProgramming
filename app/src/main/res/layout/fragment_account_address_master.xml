<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAE7E7"
    tools:context=".AccountAddressMaster">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <EditText
        android:id="@+id/txtBranchNameMaster"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:background="#FFFFFF"
        android:editable="true"
        android:ems="10"
        android:gravity="center|start"
        android:inputType="textPersonName"
        android:textAlignment="gravity"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinCityInputMaster"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/txtBranchNameMaster"
        android:layout_marginTop="3dp"
        android:background="#FFFFFF" />

    <Spinner
        android:id="@+id/spinDistrictInputMaster"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/spinCityInputMaster"
        android:layout_marginTop="3dp"
        android:background="#FFFFFF" />

    <EditText
        android:id="@+id/txtAccountAddressInputMaster"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/spinDistrictInputMaster"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:background="#FFFFFF"
        android:editable="true"
        android:ems="10"
        android:gravity="center|start"
        android:hint="@string/activity_account_address_input"
        android:inputType="textPersonName"
        android:textAlignment="gravity"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtAccountAddressGateMaster"
        android:layout_width="410dp"
        android:layout_height="45dp"
        android:layout_below="@+id/txtAccountAddressFloorMaster"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="-1dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center|start"
        android:hint="@string/activity_account_address_gate"
        android:inputType="textPersonName"
        android:textAlignment="gravity"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtAccountAddressFloorMaster"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/txtAccountAddressInputMaster"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center|start"
        android:hint="@string/activity_account_address_floor"
        android:inputType="textPersonName"
        android:textAlignment="gravity"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="250dp"
        android:text="@string/activity_account_address_update"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnAccountAddressSaveMaster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:text="@string/activity_account_address_update" />

</RelativeLayout>