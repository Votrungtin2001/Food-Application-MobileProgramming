<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAddressScreen">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo địa chỉ"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left_arrow" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#F5EAF1EE"
        android:gravity="center|left"
        android:text="   Địa chỉ*"
        android:textSize="17dp"
        android:textColor="#5C5959"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />


    <TextView
        android:id="@+id/ChooseAddressTextView_CreateAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:text="   Chọn địa chỉ"
        android:textSize="18dp"
        android:gravity="center|left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <EditText
        android:id="@+id/HouseAddressEditText_CreateAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center|left"
        android:hint="   Tòa nhà, Số tầng (Không bắt buộc)"
        android:textSize="18dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChooseAddressTextView_CreateAddress" />

    <EditText
        android:id="@+id/NumberOfGateEditText_CreateAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:hint="   Cổng (Không bắt buộc)"
        android:textSize="18dp"
        android:gravity="center|left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HouseAddressEditText_CreateAddress" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="   Tên địa chỉ (Không bắt buộc)"
        android:textSize="17dp"
        android:background="#F5EAF1EE"
        android:gravity="center|left"
        android:textColor="#5C5959"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NumberOfGateEditText_CreateAddress" />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/HomeOption_CreateAddress"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="Nhà"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:background="@drawable/searchbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/CompanyOption_CreateAddress"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:text="Công ty"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:background="@drawable/searchbg"
        app:layout_constraintStart_toEndOf="@+id/HomeOption_CreateAddress"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/OthersOption_CreateAddress"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="Others"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:background="@drawable/searchbg"
        app:layout_constraintStart_toEndOf="@+id/CompanyOption_CreateAddress"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="   Liên hệ"
        android:textSize="17dp"
        android:background="#F5EAF1EE"
        android:gravity="center|left"
        android:textColor="#5C5959"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CompanyOption_CreateAddress" />

    <EditText
        android:id="@+id/NameContactEditText_CreateAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/ic_baseline_event_note_24"
        android:gravity="center|left"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />

    <EditText
        android:id="@+id/PhoneContactEditText_CreateAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/ic_baseline_contact_phone_24"
        android:gravity="center|left"
        android:inputType="phone"
        android:text=""
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameContactEditText_CreateAddress" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="   Ghi chú (Không bắt buộc)"
        android:textSize="17dp"
        android:background="#F5EAF1EE"
        android:gravity="center|left"
        android:textColor="#5C5959"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PhoneContactEditText_CreateAddress" />

    <EditText
        android:id="@+id/NoteEditText_CreateAddress"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center|left"
        android:hint="   Ghi chú"
        android:textSize="18dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#F5EAF1EE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NoteEditText_CreateAddress" />

    <Button
        android:id="@+id/SaveAddressButton_CreateAddress"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Lưu"
        android:background="@drawable/add_address_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView30" />

</androidx.constraintlayout.widget.ConstraintLayout>