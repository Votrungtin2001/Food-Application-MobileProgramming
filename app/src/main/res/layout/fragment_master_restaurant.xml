<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    tools:context=".MasterRestaurantFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="180dp"
        android:text="@string/fragment_master_restaurant_prompt"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinMasterRestaurant"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/btnConfirmMasterRestaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinMasterRestaurant"
        android:layout_marginTop="20dp"
        android:text="@string/fragment_master_restaurant_confirm" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnConfirmMasterRestaurant"
        android:layout_marginTop="20dp"
        android:hint="@string/fragment_master_restaurant_navailable"
        android:textAlignment="center"
        android:textSize="18sp" />

</RelativeLayout>