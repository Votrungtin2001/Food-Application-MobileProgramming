<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="80dp"
    android:background="@drawable/frame">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/AllRestaurant_ConstraintLayout"
        android:layout_width="360dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="10dp">

        <ImageView
            android:id="@+id/imageView_AllRestaurants"
            android:layout_width="160dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_favorite_24" />

        <TextView
            android:id="@+id/AllRestaurants_NameRestaurant"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Heart"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView_AllRestaurants"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/AllRestaurants_Address"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="12dp"
            android:text="Địa chỉ"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/imageView_AllRestaurants"
            app:layout_constraintTop_toBottomOf="@+id/AllRestaurants_NameRestaurant" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>