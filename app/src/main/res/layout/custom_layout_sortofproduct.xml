<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="230dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout_SortOfProduct"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/frame">

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:id="@+id/SortOfProduct_RelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/ImageView_SortOfProduct"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/ic_baseline_favorite_24" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:background="@drawable/thumbup_background"
                android:drawableLeft="@drawable/ic_baseline_thumb_up_24"
                android:gravity=""
                android:text=" Yêu thích"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="8dp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/SortOfProduct_NameProduct"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Heart"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:drawablePadding="5dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/SortOfProduct_RelativeLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/SortOfProduct_NameBranch"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/SortOfProduct_NameProduct"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Name Branch"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/SortOfProduct_PriceProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Price"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>