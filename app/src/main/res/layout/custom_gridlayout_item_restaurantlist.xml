<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="230dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ItemRestaurantList_ConstraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/frame">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/ImageView_ItemRestaurantList"
            app:srcCompat="@drawable/ic_baseline_favorite_24"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/ItemRestaurantList_NameBranch"
            android:text="Heart"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ImageView_ItemRestaurantList"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/ItemRestaurantList_AddressBranch"
            android:text="Address"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ItemRestaurantList_NameBranch"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>