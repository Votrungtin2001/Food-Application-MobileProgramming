<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImageView_ImageProduct_Menu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_favorite_24" />



        <TextView
            android:id="@+id/TextView_NameProduct_Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="Name Product"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ImageView_ImageProduct_Menu" />

        <TextView
            android:id="@+id/TextView_ProductDescription_Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="Description"
            android:textSize="12dp"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@+id/TextView_NameProduct_Menu"
            app:layout_constraintStart_toEndOf="@id/ImageView_ImageProduct_Menu" />

        <TextView
            android:id="@+id/TextView_ValueOfSell_Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Value"
            android:textSize="12dp"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@+id/TextView_ProductDescription_Menu"
            app:layout_constraintStart_toEndOf="@id/ImageView_ImageProduct_Menu" />

        <TextView
            android:id="@+id/TextView_PriceProduct_Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ImageView_ImageProduct_Menu" />

        <ImageView
            android:id="@+id/ImageView_Plus_Menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_add_circle_24"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView_26"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:text=""
            android:layout_marginTop="5dp"
            android:background="#F5EAF1EE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ImageView_ImageProduct_Menu"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>