<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    tools:context=".AccountInviteFragment" >

    <TextView
        android:id="@+id/txtCopyLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSendEmail"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF"
        android:text="@string/activity_account_settings_invite_link"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtSendEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSendSMS"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF"
        android:text="@string/activity_account_settings_invite_email"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtSendSMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="@string/activity_account_settings_invite_sms"
        android:textSize="24sp" />
</RelativeLayout>