<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/ImageView_RecentlyEaten"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_baseline_favorite_24" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="@drawable/thumbup_background"
                android:drawableLeft="@drawable/ic_baseline_thumb_up_24"
                android:gravity=""
                android:text=" Yêu thích"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="8dp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/TextView_NameRestaurant"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_check_circle_24"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Heart"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:drawablePadding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/TextView_NameVoucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/TextView_NameRestaurant"
            app:layout_constraintStart_toStartOf="parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Deal Hot"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="#FA1414"
            android:background="@drawable/hotdeal_background"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>