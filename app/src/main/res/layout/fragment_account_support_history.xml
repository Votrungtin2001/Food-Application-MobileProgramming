<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountSupportHistory">

    <Button
        android:id="@+id/btnOpenFilter"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        app:backgroundTint="@color/purple_200"
        app:icon="@drawable/ic_outline_filter_alt_24" />

    <ScrollView
        android:id="@+id/scrllReportHistory"
        android:layout_width="match_parent"
        android:layout_height="607dp"
        android:layout_below="@+id/btnOpenFilter"
        android:layout_marginTop="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <Spinner
        android:id="@+id/spinReportStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/scrllReportHistory"
        android:layout_marginTop="-51dp" />
</RelativeLayout>